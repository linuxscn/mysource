<project xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <profiles>
    <profile>
      <id>skip-minification</id>
      <activation>
        <property>
          <name>jira.minify.skip</name>
          <value>true</value>          
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>net.sf.alchim</groupId>
            <artifactId>yuicompressor-maven-plugin</artifactId>
            <version>0.7.1</version>
            <executions>
              <execution>
                <id>compress-css</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>compress</goal>
                </goals>
                <configuration>
                  <excludes>
                    <exclude>**/*.*</exclude>
                  </excludes>
                </configuration>
              </execution>
              <execution>
                <id>compress-js</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>compress</goal>
                </goals>
                <configuration>
                  <excludes>
                    <exclude>**/*.*</exclude>
                  </excludes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <build>
    <plugins>
      <plugin>
        <groupId>net.sf.alchim</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <version>0.7.1</version>
        <executions>
          <execution>
            <id>compress-css</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>compress</goal>
            </goals>
            <configuration>
              <warSourceDirectory>src/main/webapp/styles</warSourceDirectory>
              <webappDirectory>${project.build.directory}/${project.build.finalName}/styles</webappDirectory>
              <includes>
                <include>**/*.css</include>
              </includes>
              <excludes>
                <exclude>**/*-min.css</exclude>
                <exclude>**/*.min.cs</exclude>
              </excludes>
            </configuration>
          </execution>
          <execution>
            <id>compress-js</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>compress</goal>
            </goals>
            <configuration>
              <warSourceDirectory>src/main/webapp/includes/js</warSourceDirectory>
              <webappDirectory>${project.build.directory}/${project.build.finalName}/includes/js</webappDirectory>
              <includes>
                <include>**/*.js</include>
              </includes>
              <excludes>
                <exclude>**/*.css</exclude>
                <exclude>**/*.xml</exclude>
                <exclude>**/*-min*</exclude>
                <exclude>ajs-gadgets/**</exclude>
                <exclude>**/calendar-h*.js</exclude>
              </excludes>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <jswarn>false</jswarn>
          <encoding>UTF-8</encoding>
          <nomunge>true</nomunge>
          <disableOptimizations>true</disableOptimizations>
          <linebreakpos>-1</linebreakpos>
        </configuration>
      </plugin>
    </plugins>
    <finalName>jira</finalName>
  </build>
</project>
