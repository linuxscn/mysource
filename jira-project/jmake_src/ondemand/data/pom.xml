<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.atlassian.jira</groupId>
    <artifactId>horde-runner</artifactId>
    <version>1.0</version>
    <build>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.5.1</version>
                <executions>
                    <execution>
                        <id>unpack-setings</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.atlassian.studio</groupId>
                                    <artifactId>studio-test-resources</artifactId>
                                    <version>115</version>
                                    <type>zip</type>
                                    <includes>**/studio-home/home/studio-initial-data.xml,**/studio-home/home/studio.license</includes>
                                    <outputDirectory>${project.build.directory}/studio-home-temp</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-horde</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.atlassian.crowd</groupId>
                                    <artifactId>horde-web-app</artifactId>
                                    <version>${horde.version}</version>
                                    <type>war</type>
                                    <outputDirectory>${horde.home}</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.atlassian.crowd</groupId>
                                    <artifactId>horde-tenant-initialiser</artifactId>
                                    <version>${horde.version}</version>
                                    <outputDirectory>${horde.home}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target name="create-studio-home">
                                <copy todir="${jira.home}" flatten="true" >
                                    <fileset dir="${project.build.directory}/studio-home-temp">
                                        <include name="**/*.*"/>
                                    </fileset>
                                </copy>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>8.1.14.v20131031</version>
                <dependencies>
                    <dependency>
                        <groupId>org.hsqldb</groupId>
                        <artifactId>hsqldb</artifactId>
                        <version>2.3.0</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <war>${horde.home}/horde-web-app.war</war>
                    <systemPropertiesFile>${horde.home}/horde-system.properties</systemPropertiesFile>
                    <systemProperties>
                        <systemProperty>
                            <name>horde.config</name>
                            <value>${horde.home}/horde-system.properties</value>
                        </systemProperty>
                        <systemProperty>
                            <name>horde.license.directory</name>
                            <value>${jira.home}</value>
                        </systemProperty>
                        <systemProperty>
                            <name>horde.jdbc.url</name>
                            <value>${hsql.jdbc.url}</value>
                        </systemProperty>
                        <systemProperty>
                            <name>-agentlib:jdwp</name>
                            <value>transport=dt_socket,server=y,suspend=y,address=5005</value>
                        </systemProperty>

                    </systemProperties>
                    <webAppConfig>
                        <contextPath>/crowd</contextPath>

                    </webAppConfig>

                    <connectors>
                        <connector implementation="org.eclipse.jetty.server.nio.SelectChannelConnector">
                            <port>4990</port>
                        </connector>
                    </connectors>
                    <scanIntervalSeconds>0</scanIntervalSeconds>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>init-horde-db</id>
            <activation>
                <file>
                    <missing>database/horde.log</missing>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>initialize-horde</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <executable>./init_horde.sh</executable>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <properties>
        <horde.version>2.8.0-OD11-UM-0.34</horde.version>
        <hsql.jdbc.url>jdbc:hsqldb:file:${horde.home}/database/horde</hsql.jdbc.url>
        <horde.home>${jira.home}/horde</horde.home>
        <skip.tests>true</skip.tests>
        <maven.test.skip>true</maven.test.skip>
    </properties>
</project>