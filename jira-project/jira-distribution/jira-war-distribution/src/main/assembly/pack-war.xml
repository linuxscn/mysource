<assembly>
    <id>war</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <baseDirectory>atlassian-jira-${project.version}-war</baseDirectory>

    <dependencySets>
        <dependencySet>
            <unpack>true</unpack>
            <unpackOptions>
                <includes>                 
                    <include>WEB-INF/classes/entityengine.xml</include>
                    <include>WEB-INF/classes/jira-application.properties</include>
                </includes>
            </unpackOptions>
            <includes>
            	<include>com.atlassian.jira:jira-webapp-dist</include>
            </includes>			
            <outputDirectory>edit-webapp</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>            
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/unpacked-war</directory>
            <outputDirectory/>
        </fileSet>
        <fileSet>
            <directory>src/main/ant</directory>
            <outputDirectory>tools/ant</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/processed-release</directory>
            <outputDirectory/>
            <includes>
                <include>*.sh</include>
            </includes>
            <lineEnding>lf</lineEnding>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/processed-release</directory>
            <outputDirectory/>
            <includes>
                <include>*.bat</include>
            </includes>
            <lineEnding>crlf</lineEnding>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/processed-release</directory>
            <outputDirectory/>
            <excludes>
                <exclude>*.sh</exclude>
                <exclude>*.bat</exclude>
                <exclude>**/lib/**</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/updater</directory>
            <outputDirectory>updater</outputDirectory>
            <excludes>
                <exclude>webapp/**</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/updater/webapp</directory>
            <outputDirectory>updater</outputDirectory>
            <includes>
                <include>**/*.bat</include>
            </includes>
            <lineEnding>crlf</lineEnding>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/updater/webapp</directory>
            <outputDirectory>updater</outputDirectory>
            <includes>
                <include>**/ant</include>
                <include>**/jira-update</include>
                <include>**/*.sh</include>
            </includes>
            <lineEnding>lf</lineEnding>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/updater/webapp</directory>
            <outputDirectory>updater</outputDirectory>
            <excludes>
                <exclude>**/ant</exclude>
                <exclude>**/jira-update</exclude>
                <exclude>**/*.bat</exclude>
                <exclude>**/*.sh</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>            
        </fileSet>
        <fileSet>
            <directory>src/main/webapp</directory>
            <outputDirectory>webapp</outputDirectory>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>            
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/ant-unzipped/apache-ant-${ant.version}</directory>
            <outputDirectory>tools/ant</outputDirectory>
            <excludes>
                 <exclude>**/bin/**</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>            
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/ant-unzipped/apache-ant-${ant.version}</directory>
            <outputDirectory>tools/ant</outputDirectory>
            <includes>
                <include>**/bin/**</include>
            </includes>
            <excludes>
                <exclude>**/bin/*.bat</exclude>
            </excludes>
            <lineEnding>lf</lineEnding>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>            
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/ant-unzipped/apache-ant-${ant.version}</directory>
            <outputDirectory>tools/ant</outputDirectory>
            <includes>
                <include>**/bin/*.bat</include>
            </includes>
            <lineEnding>crlf</lineEnding>            
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>            
        </fileSet>
    </fileSets>
</assembly>
