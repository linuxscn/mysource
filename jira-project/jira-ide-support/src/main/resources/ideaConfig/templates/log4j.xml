<?xml version="1.0" encoding="UTF-8"?>
<templateSet group="log4j">
  <template name="ldeb" value="if ($LOGGER$.isDebugEnabled())&#10;{&#10;    $LOGGER$.debug(&quot;$END$&quot;);&#10;}&#10;" description="Logs in debug mode" toReformat="true" toShortenFQNames="true">
    <variable name="LOGGER" expression="variableOfType(&quot;org.apache.log4j.Logger&quot;)" defaultValue="log" alwaysStopAt="false" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="XML" value="false" />
      <option name="HTML" value="false" />
      <option name="JSP" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="lerr" value="$LOGGER$.error(&quot;$END$&quot;);" description="Logs in error mode" toReformat="true" toShortenFQNames="true">
    <variable name="LOGGER" expression="variableOfType(&quot;org.apache.log4j.Logger&quot;)" defaultValue="log" alwaysStopAt="false" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="XML" value="false" />
      <option name="HTML" value="false" />
      <option name="JSP" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="lex" value="log.error(&quot;$MESSAGE$&quot;, $EX$);" description="Logs exception in error mode" toReformat="true" toShortenFQNames="true">
    <variable name="MESSAGE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EX" expression="variableOfType(&quot;java.lang.Exception&quot;)" defaultValue="ex" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="XML" value="false" />
      <option name="HTML" value="false" />
      <option name="JSP" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="linf" value="if ($LOGGER$.isInfoEnabled())&#10;{&#10;    $LOGGER$.info(&quot;$END$&quot;);&#10;}&#10;" description="Logs in info mode" toReformat="true" toShortenFQNames="true">
    <variable name="LOGGER" expression="variableOfType(&quot;org.apache.log4j.Logger&quot;)" defaultValue="log" alwaysStopAt="false" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="XML" value="false" />
      <option name="HTML" value="false" />
      <option name="JSP" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="log" value="private static final org.apache.log4j.Logger log = org.apache.log4j.Logger.getLogger($CLASS_NAME$.class);$END$" description="Declares a Log4J private static final logger" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="XML" value="false" />
      <option name="HTML" value="false" />
      <option name="JSP" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
  <template name="lwarn" value="$LOGGER$.warn(&quot;$END$&quot;);" description="Logs in warn mode" toReformat="true" toShortenFQNames="true">
    <variable name="LOGGER" expression="variableOfType(&quot;org.apache.log4j.Logger&quot;)" defaultValue="log" alwaysStopAt="false" />
    <context>
      <option name="JAVA_CODE" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="XML" value="false" />
      <option name="HTML" value="false" />
      <option name="JSP" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
</templateSet>

